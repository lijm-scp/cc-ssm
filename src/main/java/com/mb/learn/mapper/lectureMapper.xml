<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mb.learn.dao.LectureMapper">
    <!--mybatis默认开启自动映射功能-->
    <resultMap id="lectureMap" type="lectureBean">
        <id column="id" property="id"/>
        <result column="lecture_name" property="lectureName"/>
        <result column="note" property="note"/>
    </resultMap>
    <sql id="base_column">
        id,lecture_name,note
    </sql>
    <select id="findLectureById" parameterType="long" resultMap="lectureMap">
        select
        <include refid="base_column"/>
        from t_lecture where id = #{id}
    </select>
</mapper>