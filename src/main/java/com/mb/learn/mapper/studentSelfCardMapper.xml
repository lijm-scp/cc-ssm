<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mb.learn.dao.StudentSelfCardMapper">
    <!--mybatis默认开启自动映射功能-->
    <resultMap id="cardMap" type="studentSelfCardBean">
        <id column="id" property="id"/>
        <result column="student_id" property="studentId"/>
        <result column="note" property="note"/>
    </resultMap>
    <sql id="base_column">
        id,student_id,note
    </sql>
    <select id="findCardByStudentId" parameterType="long" resultMap="cardMap">
        select
        <include refid="base_column"/>
        from Student_SelfCard where student_id = #{id}
    </select>
</mapper>